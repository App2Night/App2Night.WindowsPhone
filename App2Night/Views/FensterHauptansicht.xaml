<Page
    x:Class="App2Night.Views.FensterHauptansicht"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App2Night.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot x:Name="registerHauptFenster" HorizontalAlignment="Left" Height="640" Margin="0,-4,0,0" Title="App2Night" VerticalAlignment="Top" Width="360">
            <PivotItem x:Name="pItemNaehe" Header="In der Nähe" FontSize="18" Margin="12,0,12,90" HorizontalAlignment="Center" Width="340" Height="450">
                <ListView x:Name="listViewNahe" HorizontalAlignment="Center" Height="450" Width="340"/>
            </PivotItem>
            <PivotItem x:Name="pItemVorgemerkt" Header="Vorgemerkt" Margin="12,0,12,90" Width="340" Height="450" HorizontalAlignment="Center">
                <ListView x:Name="listViewVorgemerkt" Height="450" Margin="0" Width="340" HorizontalAlignment="Center"/>
            </PivotItem>
        </Pivot>
        <Button x:Name="btnSuche" Content="Suche" HorizontalAlignment="Left" Height="50" Margin="10,554,0,0" VerticalAlignment="Top" Width="160" FontSize="20" Background="#FF9E9393"/>
        <Button x:Name="btnErstellen" Content="Neu" HorizontalAlignment="Left" Height="50" Margin="190,554,0,0" VerticalAlignment="Top" Width="160" FontSize="20" Background="#FF9E9393" Click="btnErstellen_wechselZuVeranstErstellen"/>
    </Grid>
</Page>
