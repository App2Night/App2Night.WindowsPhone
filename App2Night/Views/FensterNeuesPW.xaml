<Page
    x:Class="App2Night.Views.FensterNeuesPW"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App2Night.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="btnBestätigen" Content="Bestätigen" HorizontalAlignment="Left" Margin="10,514,0,0" VerticalAlignment="Top" Width="140" Height="40" FontSize="20"/>
        <Button x:Name="btnAbbrechen" Content="Abbrechen" HorizontalAlignment="Left" Margin="210,514,0,0" VerticalAlignment="Top" Width="140" Height="40" FontSize="20"/>
        <TextBlock x:Name="txtBlAltesPW" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Altes Passwort eingeben:" VerticalAlignment="Top" Width="340" MinHeight="32" Height="40" FontSize="20" FontWeight="Bold"/>
        <TextBlock x:Name="txtBlNeuesPW" HorizontalAlignment="Left" Margin="10,130,0,0" TextWrapping="Wrap" Text="Neues Passwort eingeben:" VerticalAlignment="Top" Width="340" MinHeight="32" Height="40" FontSize="20" FontWeight="Bold"/>
        <TextBlock x:Name="txtBlPWbestätigen" HorizontalAlignment="Left" Margin="10,250,0,0" TextWrapping="Wrap" Text="Passwort bestätigen" VerticalAlignment="Top" Width="340" MinHeight="32" Height="40" FontSize="20" FontWeight="Bold"/>
        <PasswordBox x:Name="pw_BoxNeusPW" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top" Height="40" RenderTransformOrigin="0.5,0.5" Width="340">
            <PasswordBox.RenderTransform>
                <CompositeTransform ScaleY="-1"/>
            </PasswordBox.RenderTransform>
        </PasswordBox>
        <PasswordBox x:Name="pwBoxPWbestätigen" HorizontalAlignment="Left" Margin="10,290,0,0" VerticalAlignment="Top" Height="40" RenderTransformOrigin="0.5,0.5" Width="340">
            <PasswordBox.RenderTransform>
                <CompositeTransform ScaleY="-1"/>
            </PasswordBox.RenderTransform>
        </PasswordBox>
        <PasswordBox x:Name="pwBoxAltesPW" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Height="40" RenderTransformOrigin="0.5,0.5" Width="340">
            <PasswordBox.RenderTransform>
                <CompositeTransform ScaleY="-1"/>
            </PasswordBox.RenderTransform>
        </PasswordBox>

    </Grid>
</Page>
