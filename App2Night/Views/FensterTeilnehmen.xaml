<Page
    x:Class="App2Night.Views.BlankPage2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App2Night.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:Name="AppBarButtonZurueck" Icon="Back" Width="100" Label="Zurück" Click="Zurueck_wechselZuVeranstaltungAnzeigen"/>
            <AppBarButton x:Name="AppBarButtonBestaetigen" Icon="Accept"  Width="100" Label="Bestätigen"/>
            <!--Wohin navigieren wenn die Teilnahme bestätigt ist? bzw. wie die Teilnahme bestätigen (Logik)-->
            <AppBarButton x:Name="appBarButton" Icon="Home"  Width="100" Label="ZurückZurHauptansicht" Click="Abbrechen_wechselZuHauptansicht"/>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="txtBoxTeilnehmen" HorizontalAlignment="Left" Margin="10,124,0,0" TextWrapping="Wrap" Text="Bitte Teilnahme bestätigen" VerticalAlignment="Top" Width="340" Height="64" FontSize="20"/>

    </Grid>
</Page>
