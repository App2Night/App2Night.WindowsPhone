<Page
    x:Class="App2Night.Views.FensterAnmelden"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App2Night.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="Anmelden" Content="Anmelden" HorizontalAlignment="Left" Margin="190,513,0,0" VerticalAlignment="Top" Height="45" Width="154"/>
        <Button x:Name="Zurück" Content="Zurück" HorizontalAlignment="Left" Margin="12,515,0,0" VerticalAlignment="Top" Height="45" Width="146"/>
        <TextBox x:Name="txtBlPasswort1" HorizontalAlignment="Center" Margin="10,280,18,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="40" Width="332" TextChanged="txtBlPasswort1_TextChanged"/>
        <TextBox x:Name="txtBlNutzername" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="10,40,0,0" Width="334" Height="40"/>
        <TextBox x:Name="txtBlPasswort" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="10,160,0,0" Width="334" TextChanged="txtBlPasswort_TextChanged" Height="40"/>
        <TextBlock x:Name="txtBLPasswort" HorizontalAlignment="Left" Margin="12,240,0,0" TextWrapping="Wrap" Text="Passwort:" VerticalAlignment="Top" SelectionChanged="textBlock_SelectionChanged" Height="40" Width="334" FontSize="20" FontWeight="Bold"/>
        <TextBlock x:Name="txtBlE_Mail1" HorizontalAlignment="Left" Margin="12,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" SelectionChanged="textBlock_SelectionChanged" Height="40" Width="334" FontSize="20" FontWeight="Bold">
            <Run Text="E-Mail"/>
            <Run Text=":"/>
        </TextBlock>
        <TextBlock x:Name="txtBlNutzername1" HorizontalAlignment="Left" Margin="12,0,0,0" TextWrapping="Wrap" Text="Nutzername:" VerticalAlignment="Top" SelectionChanged="textBlock_SelectionChanged" Height="40" Width="334" FontSize="20" FontWeight="Bold"/>
    </Grid>
</Page>
