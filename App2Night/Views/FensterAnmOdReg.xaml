<Page x:Name="FensterAnmeldenOderRegistrieren"
    x:Class="App2Night.Views.FensterAnmOdReg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App2Night.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:Name="AppBarButtonAnmelden" Icon="Contact" Label="Anmelden" Width="150" Click="Anmelden_wechselZuAnmelden"/>
            <AppBarButton x:Name="AppBarButtonRegistrieren" Icon="Edit" Label="Registrieren" Width="150" Click="Registrieren_wechselZuReg"/>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="txtBlStartGetApp2Night" HorizontalAlignment="Center" Height="40" Margin="0,150,0,0" TextWrapping="Wrap" Text="Get App2Night!" VerticalAlignment="Center" Width="185" FontSize="24" TextAlignment="Center" Foreground="#FF463B3B" FontWeight="Bold"/>
        <Image x:Name="imageAnmeldenApp2Night" HorizontalAlignment="Center" Height="200" Margin="0,-250,0,0" VerticalAlignment="Center" Width="200" Source="ms-appx:///Ressources/a2nIconColor200.png"/>

    </Grid>
</Page>
